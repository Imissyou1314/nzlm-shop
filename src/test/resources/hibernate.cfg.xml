<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>
<session-factory>
	<!-- Database connection settings -->
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<property name="connection.url">
		jdbc:mysql://localhost:3306/solrShopping?useUnicode=true&amp;characterEncoding=UTF-8<!-- 中文问题 -->
	</property>
	<property name="current_session_context_class">thread</property>
	<property name="connection.username">root</property>
	<property name="connection.password">root</property>
	<!-- JDBC connection pool (use the built-in) -->
	<property name="connection.pool_size">1</property>
	<!-- SQL dialect -->
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<!-- Echo all executed SQL to stdout -->
	<property name="show_sql">true</property>

	<property name="format_sql">true</property>
	<!-- 配置C3P0连接池属性 -->
	<!-- c3p0数据库连接池 -->
	<property name="connection.provider_class">
		org.hibernate.connection.C3P0ConnectionProvider
	</property>
	<property name="c3p0.preferredTestQuery">SELECT 1</property>
	<property name="c3p0.testConnectionOnCheckin">true</property>
	<property name="c3p0.idleConnectionTestPeriod">30</property>
	<property name="c3p0.max_size">100</property>
	<property name="c3p0.min_size">10</property>
	<property name="c3p0.initialPoolSize">10</property>
	<property name="c3p0.timeout">14400000</property>
	<property name="c3p0.max_statements">50</property>

	<!-- 参数的作用主要用于：自动创建|更新|验证数据库表结构 -->
	<property name="hbm2ddl.auto">update</property>
	<!-- 设置方言，使用的数据库类型 -->
	<!-- 是否是基于注解的hibernate，默认是开启的 ,这里设置none，不开启-->
	<property name="connection.pool_size">1</property>
	<!-- Disable the second-level cache  -->
	<property name="cache.provider_class">
		org.hibernate.cache.internal.NoCacheProvider
	</property>

	<!-- 开发阶段配置的,主要用来查看hibernate生成的sql语句，用于调试 -->
	<property name="show_sql">true</property>

	<!-- 是否是基于注解的hibernate，默认是开启的 -->
	<property name="javax.persistence.validation.mode">none</property>
	<mapping resource="com/earl/solrj/query/pojo/Goods.hbm.xml" />
</session-factory>
</hibernate-configuration>